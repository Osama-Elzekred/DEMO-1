@model Student
@{
ViewBag.Title = "Edit Student";
}


    <div class="container mt-5">
        <h2>Add Student</h2>
        @*            <div class="form-group">
        <label for="studentId">ID:</label>
        <input type="text" class="form-control" id="studentId" name="Id" required>
        </div>*@
    <form method="POST" asp-action="editStud">
        @*<input type="hidden" asp-for="Id" />*@
        @Html.HiddenFor(model => model.Id)
        
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input  asp-for="Fname" type="text" class="form-control" id="firstName" name="fName" required value="@Model.Fname">
                    <span asp-validation-for="Fname"></span>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label>
            <input asp-for="Lname" type="text" class="form-control" id="lastName" name="lName" required value="@Model.Lname">
            <span asp-validation-for="Lname"></span>

            </div>
            <div class="form-group">
                <label for="age">Age:</label>
            <input asp-for="Age" type="number" class="form-control" id="age" name="age" required value="@Model.Age">
            <span asp-validation-for="Age"></span>

            </div>
            <div class="form-group">
                <label for="address">Address:</label>
            <input asp-for=Address class="form-control" id="address" name="address" rows="3" required value="@Model.Address">
            <span asp-validation-for="Address"></span>

            </div>  
            <div class="form-group">
                <label for="Email">Email:</label>
            <input asp-for=Email class="form-control" id="Email" name="Email" rows="3" required value="@Model.Email">
            <span asp-validation-for="Email"></span>

            </div>
        <div class="form-group">
            <label for="department">Department:</label>
            <select asp-for="Dept_Id"  asp-items="ViewBag?.dept"  class="form-control" id="department" ,name="Department">
                <option disabled>select Department</option>
                @* @foreach (var item in ViewBag.Dept)
                {
                <option value="@item.id">@item.Dept_Name</option>
                }*@
            </select>
            <span asp-validation-for="Department"></span>

        </div>
            @*@Html.HiddenFor(model => item.id)*@
            <div class="d-flex justify-content-center mt-md-auto">

            <button type="submit" class="btn btn-primary ">Edit Student</button>
            </div>
            @*@Html.HiddenFor(model => model.Department.Dept_Name)*@

        </form>
        @section Scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
    @*@Html.HiddenFor(Model => Model.password,new { Value = Model.password })*@
    </div>
