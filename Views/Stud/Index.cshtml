@model IEnumerable<Student>
@{
    int i =1;
    ViewBag.Tite = "Students";
}

    <a href="/Stud/Create" class="btn btn btn-success">Create</a>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">FirstName</th>
                <th scope="col">LastName</th>
                <th scope="col">age</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Dept</th>
                <th scope="col">Modify</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
                {
            <tr>
                <th scope="row">@(item.Id)</th>
                <td>@item.Fname</td>
                <td>@item.Lname</td>
                <td>@item.Age</td>
                <td>@item.Address</td>
                    <td>@item.Email</td>
                <td>@item.Department?.Dept_Name</td>
                    <td><a asp-action="EditStud" asp-controller="stud" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-controller="stud" asp-route-id="@item.Id" class="btn btn-light">Details</a>
                  <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
               

                    </td>
            </tr>
            }                 
    </table>
